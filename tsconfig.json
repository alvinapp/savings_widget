{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./built",
    "allowJs": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "client": ["src/client"],
      "client/*": ["src/client/*"],
      "server": ["src/server"],
      "server/*": ["src/server/*"],
      "assets": ["src/client/assets"],
      "assets/*": ["src/client/assets/*"]
    },
    "resolveJsonModule": true,
  
  },
  "include": ["./src/**/*", "./__tests__/**/*", "src/custom.d.ts"],
}
